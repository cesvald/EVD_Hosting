<!DOCTYPE html>
<html>
<head>
  <title>Lodging</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'EVD Hosting', root_path, class: 'navbar-brand' %>
    </div>

    <% if current_user %>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
        	<li>
          	<%= link_to 'Bookings', bookings_path %>
          </li>
          <li>
          	<%= link_to 'Beds', beds_path %>
          </li>
          <li>
            <%= link_to 'Guests', guests_path %>
          </li>
          <li>
            <%= link_to 'Calendar', calendar_locations_path(date: {year: Time.now.year, month: Time.now.month}) %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Reports
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%=  link_to "Occupancy of Beds", monthly_guests_reports_bookings_path(date: {year: Time.now.year}) %></li>
            </ul>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        </ul>
      </div>
    <% end %>
  </div>
</nav>
<div class="container-fluid customize-container">
  <%= render partial: 'layouts/flash', locals: { flash: flash } unless flash.empty? %>
  <%= yield %>
</div>
<%= include_gon %>
</body>
</html>
