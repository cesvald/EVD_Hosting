.page-header
	h1 Lista de Eventos
	= link_to 'Nuevo Evento', new_event_path, class: "btn btn-primary btn-header"
	
br

table.table
	thead
		tr
			th Nombre
			th Empieza el
			th Termina el
			th

	tbody
		- @events.each do |event|
			tr
				td = event.name
				td = event.start_at
				td = event.end_at
				td
					= link_to 'Entrar', event_participants_path(event), class: "btn btn-primary btn-xs"
					|&nbsp;
					|&nbsp;
					= link_to 'Editar', edit_event_path(event), class: "btn btn-default btn-xs"
					|&nbsp;
					|&nbsp;
					= link_to 'Eliminar', event, data: {:confirm => 'EstÃ¡s seguro de eliminar este evento?'}, :method => :delete, class: "btn btn-danger btn-xs"
					
					
					
					